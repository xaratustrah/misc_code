#!/bin/sh
# Script for Now-DNS.com
# Uses HTTPS

# Edit here:
EMAIL=
PASS=
DOMAIN=

# Do not edit below
CRED="$EMAIL:$PASS"
URL="https://now-dns.com/update?hostname=$DOMAIN"
dns_update() {
    CMD=$(curl -s --user "$CRED" "$URL")
    logger "ddns status: $CMD"
    case "$CMD" in
	good|nochg) /sbin/ddns_custom_updated 1 ;;
	*) /sbin/ddns_custom_updated 0 ;;
    esac
}
dns_update
exit 0
